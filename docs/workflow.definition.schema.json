{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rustic-ai.local/workflow.definition.schema.json",
  "title": "Rustic-AI Workflow Definition",
  "type": "object",
  "required": ["name", "description", "entrypoints", "steps"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "version": { "type": "string", "minLength": 1 },
    "timeout_seconds": { "type": ["integer", "null"], "minimum": 1 },
    "execution": {
      "type": "object",
      "properties": {
        "max_recursion_depth": { "type": ["integer", "null"], "minimum": 1 },
        "max_steps_per_run": { "type": ["integer", "null"], "minimum": 1 },
        "condition_group_max_depth": { "type": ["integer", "null"], "minimum": 1 },
        "expression_max_length": { "type": ["integer", "null"], "minimum": 16 },
        "expression_max_depth": { "type": ["integer", "null"], "minimum": 1 },
        "loop_default_max_iterations": { "type": ["integer", "null"], "minimum": 1 },
        "loop_default_max_parallelism": { "type": ["integer", "null"], "minimum": 1 },
        "loop_hard_max_parallelism": { "type": ["integer", "null"], "minimum": 1 },
        "wait_default_poll_interval_ms": { "type": ["integer", "null"], "minimum": 1 },
        "wait_default_timeout_seconds": { "type": ["integer", "null"], "minimum": 1 },
        "null_handling": { "type": ["string", "null"], "enum": ["strict", "lenient", null] }
      },
      "additionalProperties": false
    },
    "entrypoints": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["step", "triggers"],
        "properties": {
          "step": { "type": "string", "minLength": 1 },
          "triggers": {
            "type": "object",
            "required": ["events", "cron", "webhooks"],
            "properties": {
              "events": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "cron": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "webhooks": { "type": "array", "items": { "type": "string", "minLength": 1 } }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "kind", "config", "outputs", "continue_on_error"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "kind": {
            "type": "string",
            "enum": ["tool", "skill", "agent", "workflow", "condition", "wait", "loop", "merge", "switch"]
          },
          "config": {
            "type": "object",
            "properties": {
              "expression_error_mode": { "type": "string", "enum": ["strict", "null", "literal"] },
              "expression_max_length": { "type": "integer", "minimum": 16 },
              "expression_max_depth": { "type": "integer", "minimum": 1 },
              "null_handling": { "type": "string", "enum": ["strict", "lenient"] }
            },
            "additionalProperties": true
          },
          "outputs": {
            "type": "object",
            "additionalProperties": { "type": "string", "minLength": 1 }
          },
          "next": { "type": ["string", "null"] },
          "on_success": { "type": ["string", "null"] },
          "on_failure": { "type": ["string", "null"] },
          "continue_on_error": { "type": "boolean" }
        },
        "allOf": [
          {
            "if": { "properties": { "kind": { "const": "tool" } } },
            "then": {
              "properties": {
                "config": {
                  "required": ["tool"],
                  "properties": {
                    "tool": { "type": "string", "minLength": 1 },
                    "args": {}
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "kind": { "const": "skill" } } },
            "then": {
              "properties": {
                "config": {
                  "required": ["skill"],
                  "properties": {
                    "skill": { "type": "string", "minLength": 1 },
                    "input": {}
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "kind": { "const": "workflow" } } },
            "then": {
              "properties": {
                "config": {
                  "required": ["workflow"],
                  "properties": {
                    "workflow": { "type": "string", "minLength": 1 },
                    "entrypoint": { "type": "string", "minLength": 1 },
                    "input": {}
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "kind": { "const": "condition" } } },
            "then": {
              "properties": {
                "config": {
                  "properties": {
                    "path": { "type": "string", "minLength": 1 },
                    "operator": { "type": "string" },
                    "value": {},
                    "expression": { "type": "string", "minLength": 1 },
                    "group": { "type": "object" }
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "kind": { "const": "wait" } } },
            "then": {
              "properties": {
                "config": {
                  "properties": {
                    "duration_seconds": { "type": "integer", "minimum": 1 },
                    "until_expression": { "type": "string", "minLength": 1 },
                    "poll_interval_ms": { "type": "integer", "minimum": 1 },
                    "timeout_seconds": { "type": "integer", "minimum": 1 }
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "kind": { "const": "loop" } } },
            "then": {
              "properties": {
                "config": {
                  "required": ["items"],
                  "properties": {
                    "items": {},
                    "result_expression": { "type": "string", "minLength": 1 },
                    "max_iterations": { "type": "integer", "minimum": 1 },
                    "parallel": { "type": "boolean" },
                    "max_parallelism": { "type": "integer", "minimum": 1 },
                    "item_variable": { "type": "string", "minLength": 1 },
                    "index_variable": { "type": "string", "minLength": 1 },
                    "continue_on_iteration_error": { "type": "boolean" }
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "kind": { "const": "merge" } } },
            "then": {
              "properties": {
                "config": {
                  "required": ["inputs"],
                  "properties": {
                    "mode": { "type": "string", "enum": ["merge", "append", "combine", "multiplex"] },
                    "inputs": { "type": "object", "minProperties": 1 },
                    "null_handling": { "type": "string", "enum": ["strict", "lenient"] }
                  }
                }
              }
            }
          },
          {
            "if": { "properties": { "kind": { "const": "switch" } } },
            "then": {
              "properties": {
                "config": {
                  "properties": {
                    "value": {},
                    "cases": {
                      "type": "object",
                      "additionalProperties": { "type": "string", "minLength": 1 }
                    },
                    "default": { "type": "string", "minLength": 1 },
                    "pattern_cases": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["pattern", "target"],
                        "properties": {
                          "pattern": { "type": "string", "minLength": 1 },
                          "target": { "type": "string", "minLength": 1 },
                          "flags": { "type": "string" }
                        },
                        "additionalProperties": false
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
